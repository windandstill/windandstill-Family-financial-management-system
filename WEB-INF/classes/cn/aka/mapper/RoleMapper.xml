<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.aka.mapper.RoleMapper">
    <insert id="addRole" parameterType="role">
        insert into ffms.t_role(rolename) value (#{rolename})
    </insert>
    <update id="update" parameterType="role">
        update ffms.t_role
        <set>
            <if test="rolename!=null and rolename!=''">
                rolename=#{rolename}
            </if>
        </set>
        where id=#{id};
    </update>
    <delete id="deleteRole" parameterType="int">
        delete from ffms.t_role where id =#{id}
    </delete>


    <select id="getAllRole" resultType="role">
        select * from ffms.t_role
    </select>

    <select id="findAllRoleByPage" parameterType="map" resultType="role">
        select * from ffms.t_role
        <where>
        <if test="rolename!=null and rolename!='' ">
            and rolename like "%"#{rolename}"%"
        </if>
        </where>
        limit #{start} ,#{pageSize};
    </select>

    <select id="findAllRoleByTotal" parameterType="map" resultType="java.lang.Integer">
        select count(*) from ffms.t_role
        <where>
            <if test="rolename!=null and rolename!='' ">
                and rolename like "%"#{rolename}"%"
            </if>
        </where>
    </select>

    <select id="findUserAndRoleByRoleId" resultType="java.lang.Integer">
        select count(*) from ffms.t_user_role where roleid=#{id}
    </select>
</mapper>