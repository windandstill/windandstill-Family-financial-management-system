<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.aka.mapper.TradeMapper">
    <select id="findTrade" resultType="trade" parameterType="tradeVo">
        select *
        from t_trade a,
        t_datadic b,
        t_user c,
        t_shares d,
        t_user_role f
        where a.dataid = b.id
        and a.userid = c.id
        and a.sharesid = d.id
        and a.userid = f.userid
        <include refid="tradeWhere"/>
        <if test="start!=null and size!=null">
            limit #{start},#{size}
        </if>
    </select>
    <select id="findCount" resultType="int" parameterType="tradeVo">
        select count(*)
        from t_trade a,
        t_datadic b,
        t_user c,
        t_shares d,
        t_user_role f
        where a.dataid = b.id
        and a.userid = c.id
        and a.sharesid = d.id
        and a.userid = f.userid
        <include refid="tradeWhere"/>
    </select>
    <insert id="addTrade" parameterType="trade">
        insert into t_trade
        values (null, #{userid}, #{sharesid}, #{price}, #{number}, #{money}, #{dataid}, #{content}, #{time},
                #{createtime}, null);
    </insert>
    <update id="updateTrade" parameterType="Trade">
        update t_trade
        <include refid="setTrade"/>
    </update>
    <delete id="deleteTrade" parameterType="int">
        delete from ffms.t_trade where id = #{id}
    </delete>
    <sql id="setTrade">
        <set>
            <if test="userid!=null and userid!='' ">
                userid=#{userid},
            </if>
            <if test="sharesid!=null and sharesid!='' ">
                sharesid=#{sharesid},
            </if>
            <if test="price!=null and price!='' ">
                price=#{price},
            </if>
            <if test="number!=null and number!='' ">
                number=#{number},
            </if>
            <if test="money!=null and money!='' ">
                money=#{money},
            </if>
            <if test="dataid!=null and dataid!='' ">
                dataid=#{dataid},
            </if>
            <if test="content!=null and content!='' ">
                content=#{content},
            </if>
            <if test="time!=null and time!='' ">
                time=#{time},
            </if>
            updatetime=#{updatetime}
        </set>
        where id=#{id}
    </sql>
    <sql id="tradeWhere">
        <if test="sharesname!=null and sharesname!='' ">
            and d.sharesname like '${sharesname}%'
        </if>
        <if test="dataid!=null and dataid!='' ">
            and a.dataid=#{dataid}
        </if>
        <if test="starttime!=null and starttime!='' ">
            and a.time&gt;=#{starttime}
        </if>
        <if test="endtime!=null and endtime!='' ">
            and a.time&lt;=#{endtime}
        </if>
        <if test="userid!=null and roleid!=1">
            and a.userid=#{userid}
        </if>
    </sql>

</mapper>